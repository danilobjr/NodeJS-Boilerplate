<% layout('layout') %>

<div class="form-box" id="login-box">
	<div class="header">Forgot Password</div>
	<form name='forgotPasswordForm' action="/forgot-password" method="post">
		<div class="body bg-gray">
			<% if (message.description.length > 0) { %>
				<div class="alert <%= (message.success == 'true') ? 'alert-success' : 'alert-warning' %> alert-dismissable">
					<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
					<b><%= (message.success == 'true') ? 'Done!' : 'Oops!' %></b>
					<%= message.description %>
				</div>
			<% } %>
			<p>Enter your email address below and we will send you password reset instructions</p>
			<div class="form-group">
				<input type="email" name="email" class="form-control" placeholder="Email" autofocus required />
			</div>
		</div>
		<div class="footer">
			<button type="submit" class="btn bg-olive btn-block">Send instructions</button>
			<a href="/login" class="text-center">Huh... I remember my password</a>
		</div>
	</form>
</div>
