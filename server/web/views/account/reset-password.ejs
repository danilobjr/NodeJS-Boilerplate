<% layout('./layout') %>

<div class="form-box" id="login-box">
	<div class="header">Reset Password</div>
	<form name='resetPasswordForm' action="/reset-password" method="post">
		<div class="body bg-gray">
			<% if (message.description.length > 0) { %>
				<div class="alert <%= (message.success == 'true') ? 'alert-success' : 'alert-warning' %> alert-dismissable">
					<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
					<b><%= (message.success == 'true') ? 'Done!' : 'Oops!' %></b>
					<%= message.description %>
				</div>
			<% } %>


			<% if (typeof token != 'undefined') { %>
				<input type="hidden" name="token" value="<%= token %>">
			<% } %>

			<p>Enter your new password</p>

			<div class="form-group">
				<input type="password" name="newPassword" class="form-control" placeholder="New Password" autofocus required />
			</div>
			<div class="form-group">
				<input type="password" name="retypeNewPassword" class="form-control" placeholder="Retype New Password" required />
			</div>
		</div>
		<div class="footer">
			<button type="submit" class="btn bg-olive btn-block">Reset password</button>
			<a href="/login" class="text-center">Go to Login page</a>
		</div>
	</form>
</div>
