<% layout('../layout') %>

<section class="content-header">
	<h1>Contact Form</h1>
</section>

<section class="content">
	<div class="row">
		<div class="col-md-12">
			<div class="box box-primary">
				<div class="box-header">
					<h3 class="box-title">Contact Form</h3>
				</div>

				<form name='contactForm' action="/contact" method="post">
					<div class="box-body">
						<div class="form-group">
							<input type="text" name="name" placeholder="Your Name" class="form-control">
						</div>
						<div class="form-group">
							<input type="email" name="email" placeholder="You Email" class="form-control">
						</div>
						<div class="form-group">
							<textarea name="message" cols="30" rows="10" placeholder="Your message" class="form-control"></textarea>
						</div>
					</div>

					<div class="box-footer">
						<input type="submit" value="Send message" class="btn btn-primary">
					</div>
				</form>
			</div>
		</div>
	</div>
</section>
